const Discord = require("discord.js-light")
const db = require("quick.db")
module.exports = {
  name: 'setdellogs',
//  category: 'Administration',
  async run (client, message, args) {
  if (message.channel instanceof Discord.DMChannel) return;
    if(message.author.id !== '243728573624614912') return message.reply('Untuk sementara command ini hanya untuk developer')
 //   if (!message.member.hasPermission("ADMINISTRATOR")) return message.reply("Anda tidak memiliki izin untuk menggunakan perintah ini!");
    let channel = message.mentions.channels.first() //mentioned channel
    
    if(!channel) { //if channel is not mentioned
      return message.channel.send("Please Mention the channel first")
    }
    
    //Now we gonna use quick.db
    
    db.set(`messagedel_${message.guild.id}`, channel.id) //set id in var
    
    message.channel.send(`Message Delete Logs is seted in channel ${channel}`) //send success message
  }
}